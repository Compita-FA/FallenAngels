<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user_pages.UserSettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Currently logged in"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtAccName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Guest User"
                android:textColor="#606060"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtAccEmail"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/acc_settings"
                android:textColor="#606060"
                android:textSize="15sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="46dp" />

            <TextView
                android:id="@+id/textView107"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Update email preference"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtCurrentEmail"
                android:layout_width="346dp"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:layout_marginStart="30dp"
                android:background="@drawable/background_edit_text"
                android:backgroundTint="@color/custom_light_grey"
                android:ems="10"
                android:fontFamily="@font/poppins_regular"
                android:hint="Current email"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtNewEmail"
                android:layout_width="346dp"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_edit_text"
                android:backgroundTint="@color/custom_light_grey"
                android:ems="10"
                android:fontFamily="@font/poppins_regular"
                android:hint="New email"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChangeEmail"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="33dp"
                android:background="@drawable/btn_pink_rounded"
                android:fontFamily="@font/poppins_regular"
                android:text="Update email"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="28dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>