<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_light_grey"
    android:orientation="vertical"
    tools:context=".adoption.submissions.foster_pages.FosterForm7">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="347dp"
                android:layout_height="923dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/background_white_rounded"
                android:contextClickable="true"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView147"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Page 7"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/textView124"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/f_question28"
                        android:textColor="@color/custom_red" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/f_checkAdoption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:buttonTint="@color/custom_grey"
                            android:fontFamily="@font/poppins_regular"
                            android:text="UNTIL ADOPTION" />

                        <CheckBox
                            android:id="@+id/f_checkHoliday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="180dp"
                            android:buttonTint="@color/custom_grey"
                            android:fontFamily="@font/poppins_regular"
                            android:text="HOLIDAY" />

                    </FrameLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="19dp" />

                    <View
                        android:id="@+id/divider12"
                        android:layout_width="314dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_horizontal"
                        android:background="?android:attr/listDivider" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="33dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView189"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/I"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/f_name_foster_applicant"
                            android:layout_width="268dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="15dp"
                            android:layout_weight="1"
                            android:background="@drawable/backdrop_form_text"
                            android:ems="10"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="@string/name_of_applicant"
                            android:inputType="textPersonName"
                            android:paddingStart="15dp"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView190"
                        android:layout_width="301dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text="@string/make_following_statements"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txtViewTerms2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center_horizontal"
                        android:text="@string/view_tc"
                        android:textColor="@color/custom_pink"
                        android:textSize="17sp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="26dp" />

                    <View
                        android:id="@+id/divider13"
                        android:layout_width="314dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_horizontal"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:id="@+id/textView191"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text="@string/f_agree"
                        android:textColor="@color/black" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="26dp" />

                    <TextView
                        android:id="@+id/textView161"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/app_signature"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/f_applicant_signature"
                        android:layout_width="289dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/backdrop_form_text"
                        android:ems="10"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Full name"
                        android:inputType="textPersonName"
                        android:paddingStart="15dp"
                        android:textSize="15sp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="26dp" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="49dp">

                        <TextView
                            android:id="@+id/textView162"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="13dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Date"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/edt_f_currentDate"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginStart="90dp"
                            android:background="@drawable/backdrop_form_text"
                            android:backgroundTint="@color/custom_light_grey"
                            android:ems="10"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="current date"
                            android:inputType="textPersonName"
                            android:paddingStart="15dp"
                            android:enabled="false"
                            android:textSize="15sp" />

                    </FrameLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="26dp" />

                    <View
                        android:id="@+id/divider14"
                        android:layout_width="314dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_horizontal"
                        android:background="?android:attr/listDivider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/f_btnBack6"
                            android:layout_width="102dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:background="@drawable/btn_black_rounded"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/back"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="3" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/f_btnSubmit"
                            android:layout_width="102dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:background="@drawable/btn_blue_rounded"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Submit"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="3" />

                    </LinearLayout>



                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom" />
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
