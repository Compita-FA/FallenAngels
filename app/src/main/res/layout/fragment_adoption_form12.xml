<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_light_grey"
    android:orientation="vertical"
    tools:context=".adoption.submissions.adoption_pages.AdoptionForm12">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/backdrop_form_text"
            android:elevation="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView158"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Page 12"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtViewTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center_horizontal"
                android:onClick="ViewTermsConditions"
                android:text="@string/view_tc"
                android:textColor="@color/custom_pink"
                android:textSize="17sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="33dp" />

            <TextView
                android:id="@+id/textView166"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/read_understand"
                android:textColor="@color/black" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/divider9"
                    android:layout_width="309dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/textView161"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="62dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/signed_on_the"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edt_currentDay"
                    android:layout_width="153dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/backdrop_form_text"
                    android:backgroundTint="@color/custom_light_grey"
                    android:ems="10"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="current day"
                    android:inputType="textPersonName"
                    android:paddingStart="15dp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView162"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="125dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/day_of"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edt_currentMonth"
                    android:layout_width="194dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="110dp"
                    android:background="@drawable/backdrop_form_text"
                    android:backgroundTint="@color/custom_light_grey"
                    android:ems="10"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="current month"
                    android:inputType="textPersonName"
                    android:paddingStart="15dp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView163"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="180dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/year"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edt_currentYear"
                    android:layout_width="75dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="170dp"
                    android:background="@drawable/backdrop_form_text"
                    android:backgroundTint="@color/custom_light_grey"
                    android:ems="10"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="cr. year"
                    android:inputType="textPersonName"
                    android:paddingStart="15dp"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_currentTime"
                    android:layout_width="79dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="225dp"
                    android:layout_marginTop="170dp"
                    android:background="@drawable/backdrop_form_text"
                    android:backgroundTint="@color/custom_light_grey"
                    android:ems="10"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="time"
                    android:inputType="textPersonName"
                    android:paddingStart="15dp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView164"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="180dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/at"
                    android:textColor="@color/black" />

                <View
                    android:id="@+id/divider11"
                    android:layout_width="309dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="250dp"
                    android:background="?android:attr/listDivider" />
            </FrameLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/textView165"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/app_signature"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edt_Signature"
                android:layout_width="266dp"
                android:layout_height="48dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/backdrop_form_text"
                android:ems="10"
                android:fontFamily="@font/poppins_regular"
                android:hint="Full name"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:textSize="15sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="28dp" />

            <View
                android:id="@+id/divider10"
                android:layout_width="309dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="?android:attr/listDivider" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="52dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <Space
                    android:layout_width="26dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCancel"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_gray_rounded"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@android:string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSubmit"
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_pink_rounded"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="11dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="29dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBack11"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_black_rounded"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/back"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView167"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="160dp"
                    android:layout_marginBottom="16dp"
                    android:text="12/12"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </FrameLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>