<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="338dp"
        android:layout_height="582dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/black_fallenangels_logo" />

        <TextView
            android:id="@+id/txtDogName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center_horizontal"
            android:text="Abigail"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCloseView"
            android:layout_width="54dp"
            android:layout_height="42dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_horizontal|top"
            android:text="X"
            android:textColor="@color/black"
            android:textSize="25sp"
            tools:ignore="TouchTargetSizeCheck" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="40dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp">

            <TextView
                android:id="@+id/textView110"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Breed"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtBreed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Pitti X"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtDOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/poppins_regular"
                android:text="August 2016"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Female"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtIntake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="110dp"
                android:fontFamily="@font/poppins_regular"
                android:text="June 2017"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtSuit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="265dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Single doggy home"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:id="@+id/divider"
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:background="@color/custom_light_grey"
                android:layoutDirection="inherit" />

            <TextView
                android:id="@+id/textView111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="D.O.B"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:id="@+id/divider2"
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="75dp"
                android:background="@color/custom_light_grey"
                android:layoutDirection="inherit" />

            <TextView
                android:id="@+id/textView112"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Gender"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:id="@+id/divider3"
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="105dp"
                android:background="@color/custom_light_grey"
                android:layoutDirection="inherit" />

            <TextView
                android:id="@+id/textView113"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="110dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Intake"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:id="@+id/divider4"
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="135dp"
                android:background="@color/custom_light_grey"
                android:layoutDirection="inherit" />

            <TextView
                android:id="@+id/textView114"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Nature"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:id="@+id/divider5"
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="198dp"
                android:background="@color/custom_light_grey"
                android:layoutDirection="inherit" />

            <TextView
                android:id="@+id/textView115"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="205dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="History"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:id="@+id/divider6"
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="260dp"
                android:background="@color/custom_light_grey"
                android:layoutDirection="inherit" />

            <TextView
                android:id="@+id/textView116"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="265dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Suit"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:id="@+id/divider7"
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="290dp"
                android:background="@color/custom_light_grey"
                android:layoutDirection="inherit" />

            <EditText
                android:id="@+id/txtNature"
                android:layout_width="213dp"
                android:layout_height="61dp"
                android:layout_marginStart="101dp"
                android:layout_marginTop="137dp"
                android:background="@color/white"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start|top"
                android:inputType="textMultiLine|textPersonName"
                android:lines="3"
                android:text="Fearful of strangers. Loves treats and cuddles. Strong!"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/txtHistory"
                android:layout_width="213dp"
                android:layout_height="60dp"
                android:layout_marginStart="101dp"
                android:layout_marginTop="200dp"
                android:background="@color/white"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start|top"
                android:inputType="textMultiLine|textPersonName"
                android:lines="3"
                android:text="Found living on a chain in Mitchells Plain"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </FrameLayout>

        <ImageView
            android:id="@+id/imgViewDog"
            android:layout_width="129dp"
            android:layout_height="194dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="370dp"
            app:srcCompat="@drawable/img_dog_demo" />

        <TextView
            android:id="@+id/txtViewDog"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="380dp"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_horizontal"
            android:text="@string/view_dog"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAdopt"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="70dp"
            android:layout_marginTop="450dp"
            android:background="@drawable/btn_pink_rounded"
            android:fontFamily="@font/poppins_medium"
            android:text="Adopt Me!"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFoster"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="70dp"
            android:layout_marginTop="505dp"
            android:background="@drawable/btn_orange_rounded"
            android:fontFamily="@font/poppins_medium"
            android:text="Foster Me!"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </FrameLayout>

</LinearLayout>