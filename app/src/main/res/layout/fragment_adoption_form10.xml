<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".adoption.submissions.adoption_pages.AdoptionForm10">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="347dp"
                    android:layout_height="786dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/background_white_rounded"
                    android:contextClickable="true"
                    android:elevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView152"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Page 10"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/textView122"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/ref1"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/textView153"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/Name"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/refOne_Name"
                            android:layout_width="318dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/backdrop_form_text"
                            android:ems="10"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="textPersonName"
                            android:paddingStart="15dp"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textView154"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/relationship_to_you"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/refOne_Relationship"
                            android:layout_width="318dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/backdrop_form_text"
                            android:ems="10"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="textPersonName"
                            android:paddingStart="15dp"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textView155"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/address"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/refOne_Address"
                            android:layout_width="318dp"
                            android:layout_height="85dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/backdrop_form_text"
                            android:ems="10"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="start|top"
                            android:inputType="textMultiLine|textPersonName"
                            android:lines="3"
                            android:maxLines="3"
                            android:paddingStart="15dp"
                            android:paddingTop="10dp"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textView156"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/cell_landline"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/refOne_Cell"
                            android:layout_width="318dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/backdrop_form_text"
                            android:ems="10"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="Cell"
                            android:inputType="textPersonName"
                            android:paddingStart="15dp"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/refOne_Landline"
                            android:layout_width="318dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/backdrop_form_text"
                            android:ems="10"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="Landline"
                            android:inputType="textPersonName"
                            android:paddingStart="15dp"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textView157"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/email"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/refOne_Email"
                            android:layout_width="318dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/backdrop_form_text"
                            android:ems="10"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="textPersonName"
                            android:paddingStart="15dp"
                            android:textSize="15sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:layout_gravity="bottom" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="15dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnBack9"
                                android:layout_width="102dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_weight="1"
                                android:background="@drawable/btn_black_rounded"
                                android:fontFamily="@font/poppins_regular"
                                android:text="@string/back"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/textView129"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_weight="1"
                                android:text="9/12"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <Space
                                android:layout_width="29dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/textView125"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text="11/12"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnNext10"
                                android:layout_width="102dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:background="@drawable/btn_orange_rounded"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Next"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                            <Space
                                android:layout_width="15dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_gravity="bottom" />
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>